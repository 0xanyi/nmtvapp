<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="true">

    <!-- ExoPlayer PlayerView -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/video_player_description"
        app:use_controller="false"
        app:surface_type="texture_view"
        app:resize_mode="fit"
        app:show_buffering="never" />

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark"
        android:visibility="gone"
        android:contentDescription="@string/loading_overlay_description"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/loading_overlay_background"
            android:padding="64dp">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@android:color/white"
                android:indeterminate="true"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/loading"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_title"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/connecting_to_stream"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body" />

        </LinearLayout>

    </FrameLayout>

    <!-- Pause Overlay -->
    <FrameLayout
        android:id="@+id/pauseOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/pause_overlay_description"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/pause_overlay_background"
            android:padding="48dp">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/ic_play_glow"
                android:contentDescription="@string/play"
                android:importantForAccessibility="yes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/paused"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_title"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/press_ok_to_resume"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body" />

        </LinearLayout>

    </FrameLayout>

    <!-- Error Message Overlay -->
    <FrameLayout
        android:id="@+id/errorOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark"
        android:visibility="gone"
        android:contentDescription="@string/error_overlay_description"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="assertive">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/error_overlay_background"
            android:padding="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connection_error"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_body"
                android:gravity="center" />

            <ProgressBar
                android:id="@+id/errorProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:indeterminateTint="@android:color/white"
                android:visibility="gone"
                android:importantForAccessibility="no" />

        </LinearLayout>

    </FrameLayout>

    <!-- Channel Info Banner -->
    <FrameLayout
        android:id="@+id/channelBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/safe_margin_vertical"
        android:layout_marginStart="@dimen/safe_margin_horizontal"
        android:layout_marginEnd="@dimen/safe_margin_horizontal"
        android:background="@drawable/channel_banner_background"
        android:padding="24dp"
        android:visibility="gone"
        android:alpha="0.9"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/channelBannerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_name_placeholder"
                    android:textSize="@dimen/text_title"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/channelBannerInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/now_playing_placeholder"
                    android:textSize="@dimen/text_body"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_channel_switch"
                android:contentDescription="@string/channel_switched"
                android:tint="@android:color/white"
                android:importantForAccessibility="no" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>