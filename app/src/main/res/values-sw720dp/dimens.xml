<?xml version="1.0" encoding="utf-8"?>
<!-- Dimensions for 720dp+ screens (typically 1080p and 4K TVs) -->
<resources>
    <!-- Animation constants -->
    <item name="focus_scale_factor" format="float" type="dimen">1.08</item>
    <integer name="focus_animation_duration">300</integer>
    <dimen name="card_elevation_unfocused">16dp</dimen>
    <dimen name="card_elevation_focused">32dp</dimen>
    <dimen name="reflection_height">80dp</dimen>
    <dimen name="card_corner_radius">28dp</dimen>
    <dimen name="card_width">480dp</dimen>
    <dimen name="card_height">270dp</dimen>
    <dimen name="card_gap">100dp</dimen>
    <dimen name="logo_size">160dp</dimen>

    <!-- Channel card dimensions -->
    <dimen name="channel_card_width">480dp</dimen>
    <dimen name="channel_card_height">270dp</dimen>
    <dimen name="card_info_padding">16dp</dimen>

    <!-- TV-appropriate text sizes for larger screens -->
    <dimen name="text_title">32sp</dimen>
    <dimen name="text_body">24sp</dimen>
    <dimen name="text_card_title">24sp</dimen>
    <dimen name="text_card_description">20sp</dimen>
    <dimen name="text_hint">22sp</dimen>

    <!-- Safe margins for TV overscan (4% of screen) -->
    <dimen name="safe_margin_horizontal">64dp</dimen>
    <dimen name="safe_margin_vertical">36dp</dimen>

    <!-- Leanback row spacing -->
    <dimen name="row_horizontal_padding">64dp</dimen>
    <dimen name="row_item_spacing">32dp</dimen>
</resources>
