<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for TV -->
    <style name="Theme.NMTV" parent="Theme.Leanback">
        <!-- Primary brand colors -->
        <item name="android:windowBackground">@color/brand_primary</item>
        <item name="android:colorPrimary">@color/brand_accent</item>
        <item name="android:colorPrimaryDark">@color/brand_primary</item>
        <item name="android:colorAccent">@color/brand_accent</item>

        <!-- Fullscreen settings -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Focus colors for Leanback -->
        <item name="defaultBrandColor">@color/brand_accent</item>
        <item name="defaultBrandColorDark">@color/brand_primary</item>
    </style>

    <!-- Theme for channel cards -->
    <style name="Theme.NMTV.ChannelCard">
        <item name="android:background">@drawable/channel_card_background</item>
        <item name="android:elevation">@dimen/card_elevation_unfocused</item>
    </style>

    <!-- Text styles for TV readability -->
    <style name="TextAppearance.NMTV.Title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.NMTV.Body" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.NMTV.Secondary" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.NMTV.CardTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_card_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.NMTV.CardDescription" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/text_card_description</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Overlay styles -->
    <style name="Widget.NMTV" parent="">
        <!-- Base widget style -->
    </style>

    <style name="Widget.NMTV.Overlay" parent="Widget.NMTV">
        <item name="android:background">@color/overlay_dark</item>
    </style>

    <style name="Widget.NMTV.OverlayContainer" parent="Widget.NMTV">
        <item name="android:background">@drawable/loading_overlay_background</item>
        <item name="android:padding">48dp</item>
    </style>
</resources>